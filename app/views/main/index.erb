<%= content_for :script do %>
 <script type="text/javascript">
  $().ready(function() {
   $("#location").autocomplete({ source: "<%= url_for :controller => 'main', :action => 'search' %>", minLength: 3 });
   $('div.twisty').twisty();
   });
 </script>
<% end %>
<%= content_for :head do %>
 <%= stylesheet_link_tag 'autocomplete' %>
<% end %>

<div id="search">
 <form action="<%= url_for :controller => 'main', :action => 'search_location' %>">
  <p>Show me services at <input type="text" id="location" name="location" value="<%= params[:location] %>"> on <input type="text" name="target_date" size="11" value="<%= @time.strftime('%Y-%m-%d') %>"/> at <input type="text" name="target_time" size="4" value="<%= @time.strftime('%H:%M') %>"/> <input type="submit" value="Go" /></p>
 </form>
</div>

<br />

<% if session[:mode] == 'advanced' %>

<div id="search">
 <form action="<%= url_for :controller => 'main', :action => 'search_identity' %>">
  <p>Show me train <input type="text" id="schedule" name="schedule" value="<%= params[:schedule] %>" /> on <input type="text" name="target_date" size="11" value="<%= @time.strftime('%Y-%m-%d') %>"/> <input type="submit" value="Go" /></p>
 </form>
</div>

<% end %>
