<% schedule.sort { |a,b| TSDBExplorer::train_sort(a,b) }.each do |s| %>
  <% next if s.basic_schedule.nil? %>
  <%= tag 'tr', { :style => s.basic_schedule.atoc_code == "ZZ" ? 'background: #eee;' : nil }, 'open' %>
  <% run_date = datetime %>
  <% run_date = datetime - 1.day if s.next_day_arrival or s.next_day_departure %>
  <% if advanced_mode? %>
   <td><%= link_to raw('<i class="icon-info-sign"></i>'), { :controller => 'schedule', :action => 'schedule_by_uid_and_run_date', :uid => s.basic_schedule.train_uid, :year => run_date.year, :month => run_date.month, :day => run_date.day } %> <%= s.basic_schedule.train_identity %>&nbsp;<%= decode_stp_indicator(s.basic_schedule, :A) %></td>
   <td><% if s.pass? %><em>PASS</em><% else %><%= raw format_location_time(s, :arrival) %><% end %></td>
   <td><%= raw show_location_name(s, :from) %></td>
   <td><%= format_platform_and_line(s) %>
   <td><%= raw show_location_name(s, :to) %></td>
   <td><% if s.pass? %><%= raw format_location_time(s, :pass) %><% else %><%= raw format_location_time(s, :departure) %><% end %></td>
   <td><%= s.basic_schedule.atoc_code %></td>
  <% else %>
  <td><%= link_to raw('<i class="icon-info-sign"></i>'), :controller => 'schedule', :action => 'schedule_by_uid_and_run_date', :uid => s.basic_schedule.train_uid, :year => run_date.year, :month => run_date.month, :day => run_date.day %>
   <% if @realtime.member? s.basic_schedule_uuid %>&nbsp;<%= image_tag 'tick.png', :alt => 'Real-time information available' %><% end %>
  </td>
  <td><%= s.public_arrival %></td>
  <td><%= raw show_location_name(s, :from) %></td>
  <td><%= s.platform %></td>
  <td><%= raw show_location_name(s, :to) %></td>
  <td><%= s.public_departure %></td>
  <td><%= decode_toc(s.basic_schedule.atoc_code) %></td>
 </tr>
 <% end %>
<% end %>
