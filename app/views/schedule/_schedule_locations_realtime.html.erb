<%= content_for :script do %>
 <script type="text/javascript">
  $(document).ready( function() {
   $("tr:nth-child(odd)").addClass("odd");
   $('div.twisty').twisty();
  });
 </script>
<% end %>

<% if @as_run.departed_origin? %>
 <div id="schedule_flash">Real-time information is available for this train, and is shown below.</div>
<% else %>
 <div id="schedule_flash">Real-time information will be available for this train when it has departed <%= tidy_text(decode_tiploc(@as_run.origin)) %>.</div>
<% end %>

<table>

<% if session[:mode] == 'advanced' %>

 <thead>
  <tr>
   <th>Location</th>
   <th>Pfm</th>
   <th>Line</th>
   <th>Path</th>
   <th>Arrival</th>
   <th>WTT Arr</th>
   <th>Pass</th>
   <th>Departure</th>
   <th>WTT Dep</th>
   <th>Performance</th>
  </tr>
 </thead>
 <tbody>
  <% @as_run.locations.each do |l| %>
   <tr>
    <td><%= tidy_text(decode_tiploc(l)) %></td>
    <td><%= l.platform %></td>
    <td><%= l.line %></td>
    <td><%= l.path %></td>
    <td><%= time_only(l.public_arrival) %></td>
    <%= format_time(l, 'arrival') %>
    <%= format_time(l, 'pass') %>
    <td><%= time_only(l.public_departure) %></td>
    <%= format_time(l, 'departure') %>
    <td><%= calculate_variation(l) %></td>
   </tr>
  <% end %>
 </tbody>

<% else %>
 <thead>
  <tr>
   <th>Location</th>
   <th style="text-align: center;">Platform</th>
   <th>Arrival</th>
   <th>Departure</th>
   <th>Performance</th>
  </tr>
 </thead>
 <tbody>
  <% @as_run.locations.each do |l| %>
   <% if l.is_public? %>
    <tr>
     <td><%= tidy_text(decode_tiploc(l)) %></td>
     <td style="text-align: center;"><%=raw l.platform || "&nbsp;" %></td>
     <%= format_time(l, 'arrival') %>
     <%= format_time(l, 'departure') %>
     <td><%= calculate_variation(l) %></td>
    </tr>
   <% end %>
  <% end %>
 </tbody>

<% end %>

</table>

<%= render :partial => 'common/schedule_key' %>
