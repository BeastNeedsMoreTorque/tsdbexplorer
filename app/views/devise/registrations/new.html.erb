<div class="page-header">
 <h1>Create an account on <%= $CONFIG['BRANDING'] %></h1>
</div>

<div class="row">
 <div class="span8">

  <%= form_for resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => 'well form-horizontal' } do |f| %>

   <fieldset>

    <%= devise_error_messages! %>

    <div class="control-group">
     <label class="control-label" for="full_name"><%= f.label :full_name %></label>
     <div class="controls"><%= f.text_field :full_name, :class => 'span3' %></div>
    </div>

    <div class="control-group">
     <label class="control-label" for="email"><%= f.label :email %></label>
     <div class="controls"><%= f.email_field :email, :class => 'span3' %></div>
    </div>

    <div class="control-group">
     <label class="control-label" for="password"><%= f.label :password %></label>
     <div class="controls"><%= f.password_field :password, :class => 'span3' %></div>
    </div>

    <div class="control-group">
     <label class="control-label" for="password_confirmation"><%= f.label :password_confirmation %></label>
     <div class="controls"><%= f.password_field :password_confirmation, :class => 'span3' %></div>
    </div>

    <div class="form-actions">
     <%= f.submit "Sign up", :class => 'btn btn-primary' %>
    </div>

   </fieldset>

   <%= render "links" %>

  <% end %>

 </div>

 <div class="span4">
  <h2>Why sign up?</h2>
  <p>If you want to be kept up-to-date with news and new feature announcements, please sign up.</p>
  <p>Some new features we're planning will only be available if you sign up, such as automatic emails and real-time train tracking.</p>
  <p><strong>We promise never to share or sell your personal information.</strong></p>
 </div>

</div>
